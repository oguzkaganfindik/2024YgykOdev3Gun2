@model List<CourseListViewModel>

<div>
    <div class="float-start"> <h2>Kurslar</h2> </div>
    <div class="float-end"> <a asp-controller="Course" asp-action="Create" class="btn btn-warning fw-bold">Yeni Kurs</a></div>
</div>

<div style="padding-top:75px">

    <table id="courseTable" class="table table-hover">
        <thead>
            <tr>
                <th style="width:150px"></th>
                <th>Kurs Adı</th>
                <th>Kurs Fiyatı</th>
                <th>Stok Miktarı</th>
                <th>Kategori</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (string.IsNullOrWhiteSpace(item.ImagePath))
                        {
                            <a href="~/images/noImage.png" data-lightbox="@item.CategoryName" data-title="@item.Name"><img width="140" height="120" src="~/images/noImage.png" /></a>
                        }
                        else
                        {
                            <a href="~/images/course/@item.ImagePath" data-lightbox="@item.CategoryName" data-title="@item.Name"><img width="140" height="120" src="~/images/course/@item.ImagePath" /></a>
                        }
                    </td>

                    <td>@item.Name</td>
                    <td>@item.UnitPrice TL</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.CategoryName</td>

                    <td>
                        <a asp-controller="Course" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <a href="#" class="btn btn-sm btn-danger btnDelete" data-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>


</div>

@section Scripts {

    <script>

        var table = new DataTable('#courseTable', {
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json',
            },
            pageLength:3
        });

        lightbox.option({
            'resizeDuration': 200,
            'wrapAround': true,
            'fitImagesInViewport': true,
            'maxWidth': 500,
            'maxHeight': 500
        })

        $('.btnDelete').click(function (e) {

        e.preventDefault();

            let courseId = $(this).data('id');

            var soundfile = "~/sounds/Success.mp3";

            Swal.fire({
                title: "Emin misiniz?",
                text: "Dikkat! Bu işlemi geriye alamazsınız!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, Sil!",
                cancelButtonText: "İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/admin/course/delete/' + courseId,
                        method: 'GET' 
                    }).done(function () {
                        Swal.fire({
                            title: "Silindi!",
                            text: "kurs başarıyla silindi.",
                            icon: "success",
                            OnOpen: function () {
                                let audplay = new Audio(soundfile)
                                audplay.play()
                            }
                        }).then(() => {window.location.reload() })
                    }).fail(function () {
                        Swal.fire({
                            title: "Hata!",
                            text: "kurs silinirken bir hata ile karşılaşıldı.",
                            icon: "error"
                        });
                    })
                }
            });

        })

    </script>

}