@model InstructorFormViewModel

<div class="row">

    <div class="col-8 offset-2">

        <div class="card" style="border : solid 2px">

            <div class="card-header fw-bold fs-5">
                @if (Model.Id == 0)
                {
                    <span>Instructor Ekleme Formu</span>
                }
                else
                {
                    <span>Instructor Güncelleme Formu</span>
                }
            </div>

            <div class="card-body">

                <form method="post" asp-controller="Instructor" asp-action="Instructor" enctype="multipart/form-data">

                    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger fw-bold">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <input asp-for="Id" />

                    <div class="mb-2">
                        <label asp-for="Name"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span class="text-danger fw-bold mt-1" asp-validation-for="Name"></span>
                    </div>

                    @* <div class="mb-2">
                        <label asp-for="CourseId"></label>
                        <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(ViewBag.Courses,"Id","Name"))"></select>
                        <span class="text-danger fw-bold mt-1" asp-validation-for="CourseId"></span>
                    </div> *@

                    <button type="submit" class="btn btn-success mt-3 float-end">@(Model.Id == 0 ? "Instructor Ekle" : "Instructor Güncelle")</button>

                </form>

            </div>
        </div>
    </div>
</div>